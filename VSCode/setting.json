{
    // 主题
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Dracula",
    "window.zoomLevel": 1,
    "editor.tabSize": 2,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    // 行为
    "explorer.confirmDragAndDrop": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "javascript.implicitProjectConfig.experimentalDecorators": true,
    // 文件关联
    "files.associations": {
        "*.css": "scss",
        "*.vue": "vue",
        "*.html": "html"
    },
    // fileheader 模板
    "fileheader.Author": "liqi587@pingan.com.cn",
    "fileheader.LastModifiedBy": "liqi587@pingan.com.cn",
    "fileheader.tpl": "/*\r\n * @Author: {author} \r\n * @Tel:  17783701658 \r\n * @Date: {createTime} \r\n * @Description: \r\n * @Last Modified by:   {lastModifiedBy} \r\n * @Last Modified time: {updateTime} \r\n */\r\n",
    // emmet
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "vue": "html"
    },
    // eslint
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    // vetur
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatterOptions": {
        "js-beautify-html": {
            // 属性强制折行对齐
            "wrap_attributes": "force-aligned"
        }
    }
}
